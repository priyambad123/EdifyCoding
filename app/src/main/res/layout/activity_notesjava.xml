<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_notesjava"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:layout_marginBottom="30dp"
    tools:context="com.apkglobal.edifycoding.javapages.notesjavaActivity">

    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="100%"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <android.support.percent.PercentRelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_heightPercent="100%">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/javanotestitle"
                    android:text="Notes for JAVA"
                    android:textColor="@color/title_head"
                    android:textSize="25sp"
                    android:layout_marginBottom="10dp"/>

                <TextView
                    android:text="Head First Java"
                    android:layout_below="@id/javanotestitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:id="@+id/javapdfbook1"
                    android:textStyle="bold"
                    android:shadowColor="@color/colorAccent"
                    android:layout_marginTop="40dp"
                    />
                <TextView
                    android:layout_below="@id/javapdfbook1"
                    android:text="Head First Java delivers a highly interactive, multisensory learning experience that lets new programmers pick up the fundamentals of the Java language quickly. Through mind-stretching exercises, memorable analogies, humorous pictures, and casual language,Head First Java encourages readers to think like a Java programmer."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:id="@+id/javapdfbookdesclink1"
                    android:layout_marginTop="10dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/javalinkimg1"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:layout_below="@id/javapdfbookdesclink1"/>


                <TextView
                    android:layout_below="@id/javalinkimg1"
                    android:text="Read Head First JAVA online"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/javapdfbooklink1"
                    android:textStyle="bold"></TextView>
                <TextView
                    android:text="Java: The Complete Reference"
                    android:layout_below="@id/javapdfbooklink1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/javapdfbook2"
                    android:textColor="#000"
                    android:textStyle="bold"
                    android:shadowColor="@color/colorAccent"
                    android:layout_marginTop="40dp"
                    />
                <TextView
                    android:layout_below="@id/javapdfbook2"
                    android:text="Java: The Complete Reference provides a comprehensive coverage of the Java programming language for beginners and professionals in the subject. The fundamental aspects of Java are covered in sufficient detail so that the beginner doesnâ€™t get lost in the subject matter. And at the same time, the professional is provided with a coverage of the more advanced features of Java."
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000"
                    android:id="@+id/javapdfbookdescriptionlink2"
                    android:layout_marginTop="10dp"
                    />
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/javalinkimg2"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="20dp"
                    android:src="@android:drawable/arrow_down_float"
                    android:layout_below="@id/javapdfbookdescriptionlink2"/>

                <TextView
                    android:layout_below="@id/javalinkimg2"
                    android:text="Read JAVA the Complete Ref. online"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/javapdfbooklink2"
                    android:textStyle="bold"></TextView>
            </android.support.percent.PercentRelativeLayout>
        </ScrollView>
    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>
