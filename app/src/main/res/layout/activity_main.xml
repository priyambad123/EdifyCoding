<?xml version="1.0" encoding="utf-8"?>

<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView01"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/backa"
    tools:context=".MainActivity">
    <android.support.percent.PercentRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="100%">
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
<android.support.percent.PercentRelativeLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    app:layout_heightPercent="100%">
    <!--<android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>-->



    <com.daimajia.slider.library.SliderLayout
        android:id="@+id/slider"
        android:layout_width="match_parent"
        android:layout_height="175dp"
        android:layout_marginBottom="5dp">
</com.daimajia.slider.library.SliderLayout>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Learning is easy with Edify"
        android:textSize="25sp"
        android:textAlignment="center"
        android:layout_below="@id/slider"
        android:id="@+id/head_main"
        android:layout_marginBottom="15dp"
        android:textColor="#C32B06"/>
    <!--<TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_below="@id/head_main"
        android:paddingLeft="@dimen/desc_padding"
        android:paddingRight="@dimen/desc_padding"
        android:textColor="#5E7FFA"
        android:text="@string/et_main"
        android:textAlignment="center"
        android:id="@+id/para_main"
        />-->

    <Button
        android:layout_width="@dimen/button_width"
        android:background="@drawable/button_background"
        android:layout_height="@dimen/button_height"
        android:text="Learn Android"
        android:textColor="@color/button_text"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_android"
        android:textAllCaps="true"
        android:layout_below="@id/head_main"
        android:theme="@style/MyButton"
        android:layout_marginTop="10sp"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:background="@drawable/button_background"
        android:layout_height="@dimen/button_height"
        android:textColor="@color/button_text"
        android:layout_marginBottom="10dp"
        android:text="Learn Java"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:textAllCaps="true"
        android:id="@+id/btn_java"
        android:layout_below="@id/btn_android"
         />

    <Button
        android:layout_width="@dimen/button_width"
        android:background="@drawable/button_background"
        android:layout_height="@dimen/button_height"
        android:textColor="@color/button_text"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:textSize="18sp"
        android:text="Learn Python"
        android:textAllCaps="true"
        android:layout_below="@id/btn_java"
        android:id="@+id/btn_python" />

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:layout_height="@dimen/button_height"
        android:textColor="@color/button_text"
        android:textAllCaps="true"
        android:textSize="18sp"
        android:layout_below="@id/btn_python"
        android:text="learn c"
        android:id="@+id/btn_c"
        android:layout_centerHorizontal="true"/>
    <Button
        android:layout_width="@dimen/button_width"
        android:layout_marginBottom="10dp"
        android:textSize="18sp"
        android:background="@drawable/button_background"
        android:textColor="@color/button_text"
        android:layout_height="@dimen/button_height"
        android:textAllCaps="true"
        android:text="learn c++"
        android:layout_below="@id/btn_c"
        android:layout_centerHorizontal="true"
        android:id="@+id/btn_cplus"/>

    <Button
        android:layout_width="@dimen/button_width"
        android:layout_marginBottom="10dp"
        android:background="@drawable/button_background"
        android:layout_height="@dimen/button_height"
        android:textSize="18sp"
        android:textColor="@color/button_text"
        android:textAllCaps="true"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/btn_cplus"
        android:text="online projects"
        android:id="@+id/btn_project"/>

    <LinearLayout
       android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true"
        android:background="#575857"
        android:layout_below="@+id/btn_project"
        android:weightSum="3"
        android:layout_marginTop="20dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
           android:text="Contact us"
            android:textColor="#ffffff"
            android:background="@null"
            android:textAllCaps="false"
            android:id="@+id/btn_contact_us"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="More Info"
            android:background="@null"
            android:textColor="#ffffff"
            android:id="@+id/btn_more_info"
            android:textAllCaps="false"
            android:layout_weight="1"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About"
            android:textColor="#ffffff"
            android:background="@null"
            android:id="@+id/btn_about"
            android:textAllCaps="false"
            android:layout_weight="1"/>
    </LinearLayout>


</android.support.percent.PercentRelativeLayout>
    </ScrollView>
    </android.support.percent.PercentRelativeLayout>

</android.support.percent.PercentRelativeLayout>


